<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.bazaar.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.bazaar.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_post"
        android:name="com.example.bazaar.ui.createPost.PostFragment"
        android:label="@string/title_post"
        tools:layout="@layout/fragment_post_criteria" />

    <fragment
        android:id="@+id/navigation_post_information"
        android:name="com.example.bazaar.ui.createPost.PostInformationFragment"
        android:label="@string/title_post_information"
        tools:layout="@layout/fragment_post_information"/>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.bazaar.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications"/>
</navigation>